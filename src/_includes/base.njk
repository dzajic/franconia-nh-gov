<!doctype html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or "Franconia NH (Demo)" }}</title>
    <meta name="description" content="{{ description or 'Demo of a Markdown-driven town website migration.' }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ '/assets/site.css' | url }}">
  </head>
  <body class="town-bg">
    {% include "partials/sidebar.njk" %}

    <div class="town-main">
      {% include "partials/mobilebar.njk" %}

      <main class="town-content container-fluid py-4">
        {{ content | safe }}
      </main>

      <footer class="town-footer border-top">
        <div class="container-fluid py-3 small d-flex flex-wrap gap-2 justify-content-between town-muted">
          <span>Demo only • Not an official publication</span>
          © {{ year }} Town of Franconia, NH
        </div>
      </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ '/assets/theme.js' | url }}"></script>
  </body>
</html>
